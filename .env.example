# DayPilot Orchestration Hub - Environment Configuration

# Application
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/daypilot
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/daypilot

# External Services
PERCEPTION_CORE_URL=http://localhost:8001
RHYTHM_INTELLIGENCE_URL=http://localhost:8002
INTERVENTION_PLATFORM_URL=http://localhost:8003

# Performance
MAX_CONCURRENT_WORKFLOWS=100
REQUEST_TIMEOUT_SECONDS=30
WORKFLOW_TIMEOUT_SECONDS=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Tracing
TRACE_RETENTION_DAYS=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
